{{>c_header}}

<div class="container">
            <br>
            {{#each rest}}
                <h5 class="display-4 text-center">{{this.restName}}</h5>
            {{/each}}
            <div class="col-6">
                <a href="/u/comm/new/BenG" type="button" class="btn btn-primary ">Add Comments +</a>
            </div>
            <br>
            <div class="col-13">
                <div class="shadow">
                    <h5 class="list-group-item list-group-item-action bg-primary text-white">Comments</h5>
                    <div style="min-height: 200px;">
                        <div class="pl-3 pr-3">
                            <table class="table table-striped">
                                <thead>
                                </thead>
                                <tbody>
                                    {{#each comments}}
                                    {{>comment_row this}}
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>